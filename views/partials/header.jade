header
    .wrapper
        .usernav
            if user
                if user.lastname
                    span Welcome, #[a(href='/user') #{user.lastname}]!
                else
                    span Welcome, #[a(href='/user') #{user.username}]!
                a(href='/logout') Log Out
            else
                a(href='/login') Log In
                a(href='/register') Register
        .title
            a(href="/") #{title}